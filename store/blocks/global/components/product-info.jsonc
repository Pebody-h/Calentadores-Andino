{
    "flex-layout.row#product__info": {
        "title": "Información Producto",
        "children": [
            "flex-layout.col#product__info--image",
            "flex-layout.col#product__info--data"
        ],
        "props": {
            "blockClass": "product__info"
        }
    },
    "flex-layout.col#product__info--image": {
        "title": "Imagenes Producto",
        "children": [
            "product-images#product"
        ],
        "props": {
            "blockClass": "product__info--image"
        }
    },
    "product-images#product": {
        "props": {
            "showPaginationDots": false,
            "showNavigationArrows": false,
            "thumbnailsOrientation": "horizontal",
            "zoomFactor": 2,
            "zoomMode": "in-place-hover"
        }
    },
    "flex-layout.col#product__info--data": {
        "title": "Información Producto",
        "children": [
            "breadcrumb",
            "vtex.store-components:product-name",
            "product-price",
            "product-description",
            "flex-layout.row#product__info--buy",
            "product-separator"
        ],
        "props": {
            "blockClass": "product__info--data"
        }
    },
    "flex-layout.row#product__info--buy": {
        "title": "Cantidad Y Comprar",
        "children": [
            "product-quantity",
            "add-to-cart-button"
        ],
        "props": {
            "blockClass": "product__info--buy"
        }
    },
    "product-quantity": {
        "props": {
            "selectorType": "dropdown"
        }
    }
}